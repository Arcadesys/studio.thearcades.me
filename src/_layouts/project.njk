---
layout: base.njk
---

<div class="max-w-5xl mx-auto">
  <div class="text-center mb-8">
    <a href="/projects" class="inline-flex items-center text-arcades-blue dark:text-blue-300 hover:text-arcades-purple dark:hover:text-purple-300 transition-colors mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Projects
    </a>
    
    <h1 class="gradient-text mb-6">
      {{ title }}
    </h1>
    
    {% if subtitle %}
      <p class="text-xl text-arcades-green dark:text-green-300 font-medium mb-6">{{ subtitle }}</p>
    {% endif %}
    
    <div class="flex flex-wrap justify-center gap-2 mb-6">
      <time datetime="{{ page.date | dateIso }}" class="bg-gray-100 dark:bg-gray-700 px-3 py-1 rounded-lg text-sm dark:text-gray-300 inline-flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        {{ page.date | dateReadable }}
      </time>
    </div>
    
    {% if technologies %}
      <div class="flex flex-wrap justify-center gap-2 mb-6">
        {% for tech in technologies %}
          <span class="tag bg-arcades-purple bg-opacity-10 dark:bg-purple-900 dark:bg-opacity-30 text-arcades-purple dark:text-purple-300 border-transparent px-3 py-1">{{ tech }}</span>
        {% endfor %}
      </div>
    {% endif %}
    
    {% if tags %}
      <div class="flex flex-wrap justify-center gap-2 mb-8">
        {% for tag in tags %}
          {% if tag != "project" and tag != "post" %}
            <a href="/tags/{{ tag }}/" class="tag bg-arcades-blue bg-opacity-10 dark:bg-blue-900 dark:bg-opacity-30 text-arcades-blue dark:text-blue-300 hover:bg-arcades-blue hover:text-white border-transparent px-3 py-1">{{ tag }}</a>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
    
    <div class="flex flex-wrap gap-3 justify-center mb-12">
      {% if liveUrl %}
        <a href="{{ liveUrl }}" target="_blank" rel="noopener" class="btn btn-primary inline-flex items-center group">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          Live Demo
        </a>
      {% endif %}
      
      {% if repoUrl %}
        <a href="{{ repoUrl }}" target="_blank" rel="noopener" class="btn btn-secondary inline-flex items-center group">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z"/>
          </svg>
          View Code
        </a>
      {% endif %}
    </div>
  </div>
  
  <div class="bg-white/90 dark:bg-gray-800/90 p-8 rounded-xl shadow-medium dark:shadow-dark-medium prose prose-lg md:prose-xl dark:prose-invert mx-auto max-w-3xl prose-img:rounded-xl prose-a:text-arcades-blue dark:prose-a:text-blue-300 hover:prose-a:text-arcades-purple dark:hover:prose-a:text-purple-300 transition-all duration-300 mb-16">
    {% if icon %}
      <figure class="mt-0 mb-8 flex justify-center">
        <img src="{{ icon }}" alt="{{ title }}" class="max-h-40 rounded-xl shadow-medium dark:shadow-dark-medium">
      </figure>
    {% endif %}
    
    {% if images and images.length > 0 %}
      <div class="grid grid-cols-1 {% if images.length > 1 %}md:grid-cols-2{% endif %} gap-6 mb-8">
        {% for image in images %}
          <figure class="m-0">
            <img src="{{ image }}" alt="{{ title }}" class="w-full rounded-xl shadow-medium dark:shadow-dark-medium">
          </figure>
        {% endfor %}
      </div>
    {% endif %}
    
    {{ content | safe }}
  </div>
  
  <div class="mt-8 flex flex-wrap gap-4 justify-center">
    <a href="/projects" class="btn btn-secondary inline-flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Projects
    </a>
    
    {% if liveUrl %}
      <a href="{{ liveUrl }}" target="_blank" rel="noopener" class="btn btn-primary inline-flex items-center group">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
        Live Demo
      </a>
    {% endif %}
  </div>
</div> 