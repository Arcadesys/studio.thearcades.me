---
layout: base.njk
---

<article class="max-w-4xl mx-auto">
  <header class="text-center mb-16">
    <h1 class="gradient-text mb-8">
      {{ title }}
    </h1>
    
    {% if subtitle %}
      <p class="text-xl font-medium text-arcades-green dark:text-green-300 mb-6">{{ subtitle }}</p>
    {% endif %}
    
    <div class="flex flex-wrap justify-center gap-3 mb-8">
      <time datetime="{{ page.date | dateIso }}" class="bg-gray-100 dark:bg-gray-700 px-4 py-2 rounded-lg text-gray-700 dark:text-gray-300 inline-flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        {{ page.date | dateReadable }}
      </time>
      
      {% if author %}
        <span class="bg-arcades-pink text-white px-4 py-2 rounded-lg inline-flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          {{ author }}
        </span>
      {% endif %}
    </div>
    
    {% if tags %}
      <div class="flex flex-wrap justify-center gap-2">
        {% for tag in tags %}
          {% if tag != "post" %}
            <a href="/tags/{{ tag }}/" class="tag bg-arcades-blue bg-opacity-10 dark:bg-blue-900 dark:bg-opacity-30 text-arcades-blue dark:text-blue-300 hover:bg-arcades-blue hover:text-white border-transparent px-3 py-1 hover:-translate-y-1 transition-all">{{ tag }}</a>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </header>
  
  {% if image %}
    <div class="mb-12 rounded-xl overflow-hidden shadow-medium dark:shadow-dark-medium border-2 border-transparent hover:border-arcades-blue dark:hover:border-blue-500 transition-all duration-300 group">
      <img src="{{ image }}" alt="{{ title }}" class="w-full h-auto group-hover:scale-105 transition-transform duration-700">
    </div>
  {% endif %}
  
  <div class="prose prose-lg dark:prose-invert dark:text-gray-300 mx-auto bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm p-8 rounded-xl shadow-medium dark:shadow-dark-medium border-2 border-transparent hover:border-arcades-purple dark:hover:border-purple-500 transition-all duration-300">
    {{ content | safe }}
  </div>
  
  <div class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
    <div class="flex flex-wrap justify-between">
      <a href="/blog/" class="btn btn-secondary mb-4 md:mb-0 group">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Blog
      </a>
      
      <div class="flex gap-3">
        <a href="#" class="btn btn-icon bg-gradient-to-r from-blue-400 to-blue-600 hover:from-blue-500 hover:to-blue-700 text-white hover:scale-110 transition-transform" aria-label="Share on Twitter">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
          </svg>
        </a>
        <a href="#" class="btn btn-icon bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-700 hover:to-blue-900 text-white hover:scale-110 transition-transform" aria-label="Share on Facebook">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
          </svg>
        </a>
        <a href="#" class="btn btn-icon bg-gradient-to-r from-green-500 to-green-700 hover:from-green-600 hover:to-green-800 text-white hover:scale-110 transition-transform" aria-label="Share on WhatsApp">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
  
  {% if tags %}
    <div class="mt-16 bg-gradient-to-br from-arcades-purple/10 to-purple-100 dark:from-purple-900/20 dark:to-purple-900/10 p-8 rounded-xl shadow-medium dark:shadow-dark-medium border-2 border-transparent hover:border-arcades-purple dark:hover:border-purple-500 transition-all duration-300">
      <h2 class="text-2xl font-display font-bold text-arcades-purple dark:text-purple-300 mb-6">Related Tags</h2>
      <div class="flex flex-wrap gap-3">
        {% for tag in tags %}
          {% if tag != "post" %}
            <a href="/tags/{{ tag }}/" 
               class="tag bg-white dark:bg-gray-700 border-2 border-gray-200 dark:border-gray-600 hover:bg-arcades-{{ loop.index % 5 + 1 | string }} hover:text-white hover:border-arcades-{{ loop.index % 5 + 1 | string }} dark:text-gray-300 hover:-translate-y-1 transition-all"
               style="font-size: {{ (1 + loop.index / 10) }}rem">
              {{ tag }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
  
  <div class="mt-16 text-center">
    <h2 class="text-2xl font-display font-bold mb-8 gradient-text inline-block">More Posts</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {%- for post in collections.post | reverse | limit(2) -%}
        {% if post.url != page.url %}
          <a href="{{ post.url }}" class="card hover:-translate-y-2 transition duration-300 flex flex-col h-full group">
            {% if post.data.image %}
              <div class="h-48 bg-gray-100 dark:bg-gray-700 overflow-hidden">
                <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
              </div>
            {% endif %}
            
            <div class="p-6 flex-grow flex flex-col">
              <h3 class="text-xl font-display font-bold mb-3 text-arcades-blue dark:text-blue-300 group-hover:text-arcades-purple dark:group-hover:text-purple-300 transition-colors">
                {{ post.data.title }}
              </h3>
              
              <time datetime="{{ post.date | dateIso }}" class="bg-gray-100 dark:bg-gray-700 px-3 py-1 rounded-lg text-sm dark:text-gray-300 inline-block mb-3">
                {{ post.date | dateReadable }}
              </time>
              
              <span class="text-arcades-purple dark:text-purple-300 font-medium inline-flex items-center mt-auto group-hover:translate-x-2 transition-transform">
                Read more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </a>
        {% endif %}
      {%- endfor -%}
    </div>
  </div>
</article> 