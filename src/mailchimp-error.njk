<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add some animation to the warning icon
    const warningIcon = document.querySelector('.bg-arcades-orange.rounded-full svg');
    if (warningIcon) {
      warningIcon.classList.add('animate-pulse');
    }
    
    // Check for error information in URL parameters
    const urlParams = new URLSearchParams(window.location.search);
    const debugInfo = document.getElementById('debug-info');
    const debugContent = document.getElementById('debug-content');
    
    if (debugInfo && debugContent) {
      // Collect all URL parameters for debugging
      let debugText = 'URL Parameters:\n';
      for (const [key, value] of urlParams.entries()) {
        debugText += `${key}: ${value}\n`;
      }
      
      // Add localStorage info
      debugText += '\nLocal Storage:\n';
      debugText += `subscribed: ${localStorage.getItem('subscribed')}\n`;
      debugText += `subscriberEmail: ${localStorage.getItem('subscriberEmail')}\n`;
      debugText += `mailchimp_test: ${localStorage.getItem('mailchimp_test')}\n`;
      
      // Add browser info
      debugText += '\nBrowser Info:\n';
      debugText += `User Agent: ${navigator.userAgent}\n`;
      debugText += `Cookies Enabled: ${navigator.cookieEnabled}\n`;
      
      // Display the debug info
      debugContent.textContent = debugText;
      debugInfo.classList.remove('hidden');
    }
    
    // Clear any test data
    localStorage.removeItem('mailchimp_test');
    localStorage.removeItem('test_email');
  });
</script> 