  document.querySelector('form[name="contact"]').addEventListener('submit', function(e) {
    const catAvatar = document.querySelector('img[alt="Cartoon Cat Avatar"]');
    
    // Stop the floating animation
    catAvatar.classList.remove('animate-float');
    
    // Add a quick spin animation
    catAvatar.classList.add('animate-spin');
    
