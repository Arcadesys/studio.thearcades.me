    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {%- for post in collections.post | reverse | limit(3) -%}
        <a href="{{ post.url }}" class="card hover:-translate-y-2 transition duration-300 flex flex-col h-full group">
          {% if post.data.image %}
            <div class="h-48 bg-gray-100 dark:bg-gray-700 overflow-hidden">
              <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
            </div>
          {% endif %}
          
          <div class="p-6 flex-grow flex flex-col">
            <h3 class="text-xl font-display font-bold mb-3 text-arcades-blue dark:text-blue-300 group-hover:text-arcades-purple dark:group-hover:text-purple-300 transition-colors">
              {{ post.data.title }}
            </h3>
            
            <time datetime="{{ post.date | dateIso }}" class="bg-gray-100 dark:bg-gray-700 px-3 py-1 rounded-lg text-sm dark:text-gray-300 inline-block mb-3">
              {{ post.date | dateReadable }}
            </time>
            
            {% if post.data.description %}
              <p class="text-gray-700 dark:text-gray-300 mb-4 flex-grow">{{ post.data.description }}</p>
            {% endif %}
            
            <span class="text-arcades-purple dark:text-purple-300 font-medium inline-flex items-center group-hover:translate-x-2 transition-transform">
              Read more
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </div>
        </a>
      {%- endfor -%}
      
      {% if collections.post.length === 0 %}
        <div class="col-span-3 bg-white dark:bg-gray-800 p-8 rounded-xl shadow-medium dark:shadow-dark-medium text-center">
          <p class="text-2xl font-display text-gray-500 dark:text-gray-400">No posts yet. Check back soon!</p>
        </div>
      {% endif %}
    </div>
    
    {% if collections.post.length > 0 %}
      <div class="mt-8">
        <a href="/blog" class="btn btn-secondary">View All Posts</a>
      </div>
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('subscription-form');
    const messageDiv = document.getElementById('subscription-message');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        // Validate the form before submission
        const email = document.getElementById('email').value;
        const name = document.getElementById('name').value;
        const consent = document.getElementById('consent').checked;
        
        if (!email || !consent) {
          e.preventDefault();
          messageDiv.innerHTML = `<p class="text-red-500 dark:text-red-400 font-medium">Please fill in all required fields.</p>`;
          messageDiv.classList.remove('hidden');
          return;
        }
        
        // Store that the user has subscribed in localStorage
        localStorage.setItem('subscribed', 'true');
        localStorage.setItem('subscriberEmail', email);
        localStorage.setItem('subscriberName', name);
        
        // Show a loading message
        messageDiv.innerHTML = `<p class="text-arcades-blue dark:text-blue-300 font-medium">Submitting your information...</p>`;
        messageDiv.classList.remove('hidden');
        
        // Add a fallback redirect in case Mailchimp's redirect doesn't work
        setTimeout(function() {
          // If we're still on the page after 5 seconds, redirect manually
          window.location.href = '/subscribe-success/';
        }, 5000);
        
        // Note: Mailchimp will handle the actual form submission and redirect
      });
    }
    
    // Check if user has just subscribed (coming back from Mailchimp)
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.has('subscribe') && urlParams.get('subscribe') === 'success' && localStorage.getItem('subscribed') === 'true') {
      const email = localStorage.getItem('subscriberEmail');
      const name = localStorage.getItem('subscriberName');
      
      // Scroll to the subscription form
      const subscriptionForm = document.getElementById('subscription-form');
      if (subscriptionForm) {
        subscriptionForm.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
      
      messageDiv.innerHTML = `<p class="text-arcades-green dark:text-green-300 font-medium">Thanks${name ? ' ' + name : ''}! Your email (${email}) has been added to our list.</p>`;
      messageDiv.classList.remove('hidden');
      
      // Clear the form
      if (form) {
        form.reset();
      }
      
      // Clear the subscription data
      localStorage.removeItem('subscribed');
      localStorage.removeItem('subscriberEmail');
      localStorage.removeItem('subscriberName');
    }
  });
</script> 