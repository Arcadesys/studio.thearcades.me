<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add the cartoon cat avatar
    const catAvatar = document.createElement('div');
    catAvatar.className = 'w-32 h-32 mx-auto mb-6';
    catAvatar.innerHTML = `<img src="/img/avatar/cartoon-cat.svg" alt="Cartoon Cat Avatar" class="w-full h-full animate-float">`;
    
    // Insert after the checkmark icon
    const checkmarkDiv = document.querySelector('.mb-8');
    if (checkmarkDiv) {
      checkmarkDiv.parentNode.insertBefore(catAvatar, checkmarkDiv.nextSibling);
    }
    
    // Check if this was a test submission
    const isTest = localStorage.getItem('mailchimp_test') === 'true';
    const testEmail = localStorage.getItem('test_email');
    
    // Get the subscriber's name from localStorage if available
    const subscriberName = localStorage.getItem('subscriberName');
    
    // Update the title and message based on whether this was a test
    const titleElement = document.querySelector('.text-2xl.md\\:text-3xl');
    const messageElement = document.querySelector('.text-lg.text-gray-700.dark\\:text-gray-300.mb-8');
    
    if (titleElement) {
      if (isTest) {
        titleElement.textContent = `Test Successful!`;
        if (messageElement) {
          messageElement.innerHTML = `
            Your test submission to Mailchimp was successful! This confirms that your Mailchimp integration is working properly.<br><br>
            <strong>Test Email:</strong> ${testEmail || 'Not recorded'}<br>
            <strong>Tags:</strong> test-signup
          `;
        }
      } else if (subscriberName) {
        titleElement.textContent = `Thanks, ${subscriberName}!`;
      }
    }
    
    // Clear the localStorage
    localStorage.removeItem('subscriberName');
    localStorage.removeItem('subscriberEmail');
    localStorage.removeItem('subscribed');
    localStorage.removeItem('mailchimp_test');
    localStorage.removeItem('test_email');
  });
</script> 