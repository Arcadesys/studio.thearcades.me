<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('test-form');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        // Generate a unique test email to avoid duplicates
        const testEmail = document.getElementById('test-email');
        if (testEmail.value === 'test@example.com') {
          const timestamp = new Date().getTime();
          testEmail.value = `test+${timestamp}@example.com`;
        }
        
        // Store that we're testing
        localStorage.setItem('mailchimp_test', 'true');
        localStorage.setItem('test_email', testEmail.value);
        
        // Let the form submit normally
        console.log('Submitting test to Mailchimp:', testEmail.value);
      });
    }
  });
</script> 