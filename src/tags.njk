---
layout: base.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: "Posts tagged with '{{ tag }}' | The Arcades' Studio"
---

<div class="max-w-5xl mx-auto">
  <div class="text-center mb-12">
    <h1 class="text-4xl md:text-5xl font-display font-bold mb-6 inline-block text-arcades-purple">
      Posts tagged with "{{ tag }}"
    </h1>
  </div>
  
  <div class="space-y-8">
    {%- for post in collections[tag] | reverse -%}
      <article class="card hover:-translate-y-1 transition duration-300">
        <div class="flex flex-col md:flex-row">
          {% if post.data.image %}
            <div class="w-full md:w-1/3 h-48 bg-gray-100 overflow-hidden">
              <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="w-full h-full object-cover">
            </div>
          {% endif %}
          
          <div class="{% if post.data.image %}md:w-2/3{% else %}w-full{% endif %} p-6">
            <h2 class="text-2xl md:text-3xl font-display font-bold mb-3">
              <a href="{{ post.url }}" class="text-arcades-blue hover:text-arcades-purple transition">{{ post.data.title }}</a>
            </h2>
            
            <div class="flex flex-wrap gap-2 mb-3">
              <time datetime="{{ post.date | dateIso }}" class="bg-gray-100 px-3 py-1 rounded-lg text-sm">{{ post.date | dateReadable }}</time>
              {% if post.data.author %}
                <span class="bg-arcades-pink text-white px-3 py-1 rounded-lg text-sm">{{ post.data.author }}</span>
              {% endif %}
            </div>
            
            {% if post.data.subtitle %}
              <p class="text-lg text-arcades-green font-medium mb-3">{{ post.data.subtitle }}</p>
            {% endif %}
            
            {% if post.data.description %}
              <p class="mb-4 text-gray-700">{{ post.data.description }}</p>
            {% endif %}
            
            {% if post.data.tags %}
              <div class="flex flex-wrap gap-2 mb-4">
                {% for postTag in post.data.tags %}
                  {% if postTag != "post" %}
                    <a href="/tags/{{ postTag }}/" 
                       class="tag {% if postTag == tag %}bg-arcades-green text-white{% else %}bg-arcades-blue bg-opacity-10 text-arcades-blue hover:bg-arcades-blue hover:text-white{% endif %}">
                      {{ postTag }}
                    </a>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
            
            <a href="{{ post.url }}" class="btn btn-primary">Read more</a>
          </div>
        </div>
      </article>
    {%- endfor -%}
  </div>
  
  <div class="mt-12 text-center">
    <a href="/blog" class="btn btn-secondary">
      &larr; Back to all posts
    </a>
  </div>
</div> 