{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "_site",
        "nodeVersion": "20.x"
      }
    }
  ],
  "routes": [
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/img/(.*)", "dest": "/img/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/404.html" }
  ],
  "github": {
    "silent": true
  },
  "framework": "eleventy",
  "buildCommand": "npm run build",
  "outputDirectory": "_site"
} 