{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "_site"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/404.html" }
  ],
  "github": {
    "silent": true
  },
  "framework": "eleventy",
  "buildCommand": "npm run build",
  "outputDirectory": "_site",
  "nodeVersion": "20.x"
} 